//{ Driver Code Starts
#include <bits/stdc++.h>
using namespace std;

// } Driver Code Ends
class Solution {
  public:
    int characterReplacement(string s, int k) {
        // code here
        vector<int>v(26,0);
        int max1=0,l=0;
        for(int r=0;r<s.length();r++){
            v[s[r]-'A']++;
           
            while( ((r-l+1)-*max_element(v.begin(), v.end())) >k ){
                v[s[l]-'A']--;
                l++;
            }
            max1=max(max1,r-l+1);
          
        }
        return max1;
    }
};

//{ Driver Code Starts.
int main() {
    int t;
    cin >> t;
    while (t--) {
        string S;
        cin >> S;
        int K;
        cin >> K;

        Solution obj;
        cout << obj.characterReplacement(S, K) << endl;
    }
    return 0;
}
// } Driver Code Ends