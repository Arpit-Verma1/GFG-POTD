//{ Driver Code Starts
#include <bits/stdc++.h>
using namespace std;


// } Driver Code Ends
//User function Template for C++

class Solution {
  public:
    long long countPairs(int n, int a[], int k) {
        // code here
        long long ans=0;
        int b[k]={0};
        for(int i=0;i<n;i++){
            b[a[i]%k]++;
        }
       
        for(int i=0;i<k;i++){
           
            if(b[i]>=2){
                ans+=b[i]*(b[i]-1)/2;
            }
        }
        return ans;
    }
   
};

//{ Driver Code Starts.

int main() {
    int t;
    cin >> t;
    while (t--) {
        int n,k;
        cin>>n;
        
        int arr[n];
        for(int i=0; i<n; i++)
            cin>>arr[i];
        
        cin>>k;

        Solution ob;
        cout << ob.countPairs(n,arr,k) << endl;
    }
    return 0;
}
// } Driver Code Ends
